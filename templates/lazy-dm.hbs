<nav class="tabs" data-group="main">
  <a class="item" data-tab="step1">{{localize "LAZYDM.Step1"}}</a>
  <a class="item" data-tab="step2">{{localize "LAZYDM.Step2"}}</a>
  <a class="item" data-tab="step3">{{localize "LAZYDM.Step3"}}</a>
  <a class="item" data-tab="step4">{{localize "LAZYDM.Step4"}}</a>
  <a class="item" data-tab="step5">{{localize "LAZYDM.Step5"}}</a>
